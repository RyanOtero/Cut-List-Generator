<Window x:Name="CutList_Generator" x:Class="Solidworks_Cutlist_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solidworks_Cutlist_Generator"
        xmlns:vm="clr-namespace:Solidworks_Cutlist_Generator.ViewModels"
        mc:Ignorable="d"
        Title="Cutlist Generator" Height="931" Width="1344" WindowStyle="SingleBorderWindow" SizeToContent="Manual">
    <Window.Resources>
       <BooleanToVisibilityConverter x:Key="b2v" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Cutlist" Margin="0,0,0,0" Height="22" VerticalAlignment="Stretch" Width="55" Padding="10,1,10,1">
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="23*"/>
                    <RowDefinition Height="83*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="filePathLabel" Content="File Path:&#xA;" HorizontalAlignment="Right" Margin="18,16,0,0" VerticalAlignment="Top" Width="55" Padding="3,0,3,3" Height="20" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                    <TextBox x:Name="filePathTextBox" Margin="10,15,10,0" AcceptsReturn="False" TextWrapping="NoWrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="21" Text="{Binding Path=SourceText, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0" />
                    <Button x:Name="sourceBrowseButton" Content="Browse" Margin="10,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Command="{Binding Path=SourceBrowseCommand}" Padding="3,0,3,3" Width="60" VerticalContentAlignment="Center" Height="21" Grid.Column="2" Grid.Row="0"/>
                    <Button x:Name="generateButton" Content="Generate" Command="{Binding Path=GenerateCommand}" Padding="3,0,3,3" VerticalContentAlignment="Center" Height="21" Width="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,10,0" Grid.Column="2" Grid.Row="1"/>
                    <Button x:Name="saveButton" Content="Save" VerticalAlignment="Center" Command="{Binding Path=SaveCommand}" Padding="3,0,3,3" VerticalContentAlignment="Center" Height="21" HorizontalAlignment="Left" Width="60" Margin="10,0,10,0" Grid.Column="2" Grid.Row="2"/>
                    <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="right" VerticalAlignment="Center" Command="{Binding Path=ClearCommand}" Padding="3,0,3,3" VerticalContentAlignment="Center" Width="60" Height="21" Margin="10,0,10,0" Grid.Column="1" Grid.Row="1"/>
                    <CheckBox x:Name="detailedCutListCheckBox" IsChecked="{Binding Path=IsDetailed, Mode=TwoWay}"  Content="Detailed Cut List" HorizontalAlignment="Right" Margin="0,0,90,0" VerticalAlignment="Center" FlowDirection="RightToLeft" Grid.Column="1" Grid.Row="1">
                        <CheckBox.Resources>
                            <Style TargetType="{x:Type Path}">
                                <Setter Property="FlowDirection" Value="LeftToRight" />
                            </Style>
                        </CheckBox.Resources>
                    </CheckBox>
                    <CheckBox x:Name="showPricingCheckBox" IsChecked="{Binding Path=ShowPricing, Mode=TwoWay}" Content="Show Pricing" HorizontalAlignment="Right" Margin="0,0,210,0" VerticalAlignment="Center" FlowDirection="RightToLeft" Grid.Column="1" Grid.Row="1">
                        <CheckBox.Resources>
                            <Style TargetType="{x:Type Path}">
                                <Setter Property="FlowDirection" Value="LeftToRight" />
                            </Style>
                        </CheckBox.Resources>
                    </CheckBox>
                </Grid>
                <DataGrid x:Name="cutListDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding Path=CutList}" Margin="20,12,20,20" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=Qty}" Header="Qty" Width="1.5*"/>
                        <DataGridTextColumn Binding="{Binding Path=Description}" Header="Description" Width="8.5*"/>
                        <DataGridTextColumn Binding="{Binding Path=Length}" Header="Length (IN)" Width="2.25*"/>
                        <DataGridTextColumn Binding="{Binding Path=Angle1}" Header="Angle 1" Width="2*"/>
                        <DataGridTextColumn Binding="{Binding Path=Angle2}" Header="Angle 2" Width="2*"/>
                        <DataGridTextColumn Binding="{Binding Path=AngleDirection}" Header="Direction" Width="2.5*"/>
                        <DataGridTextColumn Binding="{Binding Path=AngleRotation}" Header="Rotation" Width="2.5*"/>
                        <DataGridTextColumn Binding="{Binding Path=StickNumberString}" Header="Stick No." Width="2.5*" Visibility="{Binding IsChecked, ElementName=detailedCutListCheckBox,Converter={StaticResource b2v}}"/>
                        <DataGridTextColumn Binding="{Binding Path=Cost}" Header="Cost Ea." Width="2*" Visibility="{Binding IsChecked, ElementName=showPricingCheckBox,Converter={StaticResource b2v}}"/>
                        <DataGridTextColumn Binding="{Binding Path=TotalCost}" Header="Total" Width="2*" Visibility="{Binding IsChecked, ElementName=showPricingCheckBox,Converter={StaticResource b2v}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="Vendors" Margin="0,0,0,0" Height="22" Padding="10,1,10,1">
            <DataGrid x:Name="vendorDataGrid" ItemsSource="{Binding Path=Vendors}"  AutoGenerateColumns="False" Margin="20,92,20,20" Grid.RowSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=ID}" Header="ID" Width=".5*"/>
                    <DataGridTextColumn Binding="{Binding Path=VendorName}" Header="Vendor Name" Width="3*"/>
                    <DataGridTextColumn Binding="{Binding Path=PhoneNumber}" Header="Phone Number" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding Path=ContactName}" Header="Contact Name" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding Path=ContactEmail}" Header="Contact Email" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
        <TabItem Header="Stock Types" HorizontalAlignment="Stretch" Height="22" RenderTransformOrigin="0.527,0.547" Margin="0,0,0,0" Padding="10,1,10,1">
            <DataGrid x:Name="stockTypesDataGrid" ItemsSource="{Binding Path=StockItems}" AutoGenerateColumns="False" Margin="20,92,20,20" Grid.RowSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=ID}" Header="ID" Width=".4*"/>
                    <DataGridTextColumn Binding="{Binding Path=VendorIdentifier}" Header="Vendor ID" Width=".9*"/>
                    <DataGridTextColumn Binding="{Binding Path=MatTypeString}" Header="Material Type" Width="1.15*"/>
                    <DataGridTextColumn Binding="{Binding Path=ProfTypeString}" Header="Profile Type" Width="1.55*"/>
                    <DataGridTextColumn Binding="{Binding Path=CostPerFootString}" Header="Cost/FT" Width=".75*"/>
                    <DataGridTextColumn Binding="{Binding Path=CostPerLengthString}" Header="Cost/Length" Width="1*"/>
                    <DataGridTextColumn Binding="{Binding Path=StockLength}" Header="Stock Length" Width="1.1*"/>
                    <DataGridTextColumn Binding="{Binding Path=InternalDescription}" Header="Internal Description" Width="3*"/>
                    <DataGridTextColumn Binding="{Binding Path=ExternalDescription}" Header="External Description" Width="3*"/>

                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
    </TabControl>
</Window>
